name: MediaWiki CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Run a one-line script
        run: echo Hello, world!
  
      - name: Build Docker Image
        run: |
          docker build -t itsbharatsaini/mediawiki-app:latest .
          docker login -u itsbharatsaini -p ${{ secrets.DOCKERHUB_TOKEN }}
          docker push itsbharatsaini/mediawiki-app:latest
